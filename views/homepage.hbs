  <div>
   <h2>Latest Posts</h2>
    <h2>{{vibetype}}</h2>

    <h3>{{contentbody}}</h3>
        {{!-- <li>{{title}}</li> --}}
  </div>

    <h3>{{created_at}}</h3>
    <h3>{{contentbody}}</h3>
        {{!-- <li>{{title}}</li> --}}
  </div>
  <br><br>

  {{/each}}
  








