 <!-- Blog post creation form  -->
    <div class="container">
      <div class="card">
        <div class="card-body">
          <!-- Dropdown for selecting a category -->
          <h2 class="card-title">Logged in as:</h2>
          <form id="blogForm">
            <h2>Find Your Vibe:</h2>
            <div class="buttons-container">
              <a class="btn btn-primary" href="#">View recent post</a>
              <a class="btn btn-success" href="#">Create a new post</a>
              <a class="btn btn-danger" href="#">Delete Post</a>
              <label for="category"></label>
              <select
                id="category"
                name="category"
                class="form-control"
                required
              >
                <option value="">Select Your Vibes</option>
                <option value="technology">Technology</option>
                <option value="travel">Travel</option>
                <option value="food">Food</option>
                <!-- Add more categories as needed -->
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
    